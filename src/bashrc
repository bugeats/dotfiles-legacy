# Bash
# ------------------------------------------------------------------------------

# VI mode mutherfucker
set -o vi

# Display git status in prompt
parse_git_branch() {
  git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (git:\1)/'
}

export PS1="\w\$(parse_git_branch) $ "

# Aliases
# ------------------------------------------------------------------------------

alias vd='git diff | nvim -'
alias less='less -r'

# ----

# Now load general profile
. ~/.profile
